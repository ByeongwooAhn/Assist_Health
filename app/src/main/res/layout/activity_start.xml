<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232"
    tools:context=".StartActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#333232">

            <TextView
                android:id="@+id/textViewHeightWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="거의 다 왔어요!"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- 작게 보여지는 추가 안내 텍스트 -->
            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원님의 정보는 외부에 공개되지 않으니 안심하세요!"
                android:textSize="17dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assist-health가 회원님의 정보를 토대로 운동을 도와드릴게요!"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <!-- 밑줄로 이름을 입력하는 부분 -->

        </LinearLayout>
    </ScrollView>

    <!-- 다음 버튼 -->
    <Button
        android:id="@+id/buttonNext"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_btn_intro1"
        android:text="시작하기"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
